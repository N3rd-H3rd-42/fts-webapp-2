<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>FTS - Login</title>
</head>

<body>
    <%- include('./partials/navbar') %>

    <div class="heading-container">
        <div class="overlay"></div>
        <h1 class="heading-h1">Login</h1>
    </div>
        <% if (messages.error) { %>
            <%= messages.error %>
                <% } %>
                    <% if (message !=null) { %>
                        <%= message %>
                            <% } %>
                        <h1 class="login-heading">Please Enter Your Credentials</h1>
                                <form id="login-form" action="/login" method="post">
                                    <div id="login-overlay"></div>
                                    <div>
                                        <label for="email">Email</label>
                                        <input type="text" id="email" name="email" placeholder="Ener your email">
                                    </div>
                                    <div>
                                        <label for="password">Password</label>
                                        <input type="password" id="password" name="password" placeholder="Enter your password" >
                                    </div>
                                    <button type="submit" class="admin-login-button">login</button>
                                </form>
                                <%- include('./partials/footer') %>
</body>

</html>
